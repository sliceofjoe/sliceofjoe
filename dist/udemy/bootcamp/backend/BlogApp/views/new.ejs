<%- include("partials/header") %>

<div class="ui main text container segment">
    <div class="ui huge header">New Post</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="Title of Post">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Image URL">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea required name="blog[body]" cols="30" rows="10" placeholder="Enter content here"></textarea>
        </div>
            <input class="ui secondary basic button" type="submit">
    </form>
</div>

<%- include("partials/footer") %>